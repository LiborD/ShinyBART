bart.display <- function(balloon,
pumps,
pop = FALSE,
max.pumps = 100,
show.max = TRUE,
balloon.col = gray(.5, .5),
pop.col = "indianred1") {
# Plotting space
par(mar = c(0, 0, 0, 0))
layout(matrix(c(1, 2), nrow = 2, ncol = 1, byrow = TRUE), heights = c(4, 7), widths = c(9))
# Title row
plot.new()
text(c(.1, .5), c(.7, .7), labels = c("Balloon", "Pumps"), cex = 2, font = 3)
text(c(.1, .5), c(.5, .5), labels = c(paste(balloon, "of", balloons.n), pumps), cex = 3)
par(mar = c(0, 0, 1, 0))
# Balloon display
plot(1, xlim = c(0, 1), ylim = c(0, 1),
type = "n", xaxt = "n", yaxt = "n",
bty = "n", xlab = "", ylab = "")
if(show.max) {
points(x = .5, y = .5,
cex = (max.pumps + 1) / 2.5,
pch = 1, col = gray(.3))
}
if(pop == FALSE) {
points(x = .5,
y = .5,
cex = (pumps + 1) / 2.5,
pch = 21,
bg = balloon.col,
col = "black")
}
if(pop == TRUE) {
points(x = .5,
y = .5,
cex = (pumps + 1) / 2.5,
pch = 21,
bg = pop.col,
col = "black")
mtext(text = "POP!",
cex = 5, side = 3, font = 3)
}
}
